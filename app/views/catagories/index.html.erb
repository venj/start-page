<h1>Listing catagories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
  </tr>

<% @catagories.each do |catagory| %>
  <tr>
    <td><%=h catagory.name %></td>
    <td><%=h catagory.user.login %></td>
    <td><%= link_to 'Show', catagory %></td>
    <td><%= link_to 'Edit', edit_catagory_path(catagory) %></td>
    <td><%= link_to 'Destroy', catagory, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New catagory', new_catagory_path %>